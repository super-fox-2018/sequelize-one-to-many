<DOCTYPE html>
<html>
  <head>
    <title>
      Subjects
    </title>
  </head>
    <body>
      <h1 style="text-align:center"><%= titleSubject %></h1>
      <div id= "container">
        <table style="border-collapse: separate; style=text-align:center; width: 100%" border = 1>
          <thead>
            <tr>
              <th style="border-top: 0"> Name </th>
              <th style="border-top: 0"> Teachers Assigned </th>
              <th style="border-top: 0"> Options </th>
            </tr>
          </thead>
          <tbody>
            <%  if(subject.length !== 0){
                for(var i in subject){%>
            <tr style="text-align:center">
              <td style="border-top: 0"><%= subject[i].name %></td>
              <td>
                <ol>
                  <% for(let k = 0; k < subject[i].Teachers.length; k++){ %>
                  <li><%= subject[i].Teachers[k].firstName + " " + subject[i].Teachers[k].lastName%></li>
                  <%  } %>
                </ol>
              </td>
              <td style="border-top: 0"><a href="/subject/<%= subject[i].id %>/edit">Edit</a>/<a href="/subject/<%= subject[i].id %>/delete" onclick="if (confirm('Do you want to delete this item?')){return true;}else{event.stopPropagation(); event.preventDefault();};">Delete</a></td>
              <%  }
                }
                else{ %>
                  <tr style="text-align:center">
                    <td>  <%= "No records found!"%></td>
                  </tr>
              <%  }%>
            </tr>
          </tbody>
        </table>
      </div>
      <br>
      <button><a href="/subject/add" style="text-decoration:none;font-size:12px;font-weight:bold">Add</a></button>
      <button style="float:right;"><a href="/" style="text-decoration:none;font-size:12px;font-weight:bold">Back</a></button>
    </body>
</html>
