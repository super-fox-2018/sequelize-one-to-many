<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>Subject Page</title>
	<link rel="stylesheet" href="">
</head>
<body>
	<h1>All Subjects Data</h1>
	<table border=1>
		<caption>Subjects Data</caption>
		<thead>
			<a href="/subject/add">add subject</a>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<!-- <th>Last Name</th> -->
				<!-- <th>Email</th> -->
        <th>Teachers</th>
				<th>Options</th>
			</tr>
		</thead>
		<tbody>
			<% subjects.forEach((subject) => { %>
				<tr>
					<td><%=subject.id%></td>
					<td><%=subject.name%></td>
          <td>
          <%if(subject.teachers.length > 1 ){%>
            <ol type = 'a'>
              <%for(var i = 0; subject.teachers.length > i; i++){%>
                  <li><%=subject.teachers[i].firstName +' '+ subject.teachers[i].lastName%></li>
              <%}%>
            </ol>
          <%}else{%>
            <p>unassign teachers</p>
          <%}%>
        </td>
					<td><a href="/subject/edit/<%= subject.id %>">Edit </a>
					 		/ <a href="/subject/delete/<%= subject.id%>" onclick="confirm('Are you sure?')">Delete</td>
			<% }) %>
		</tbody>
	</table>
	<h3><a href="/home">Back</a></h3>
</body>
</html>
