<DOCTYPE html>
<html>
  <head>
    <title>
      Teachers
    </title>
  </head>
    <body>
      <h1 style="text-align:center"><%= titleTeachers %></h1>
      <div id= "container">
        <table style="border-collapse: separate; style=text-align:center; width: 100%" border = 1>
          <thead>
            <tr>
              <th style="border-top: 0"> First Name </th>
              <th style="border-top: 0"> Last Name </th>
              <th style="border-top: 0"> Email </th>
              <th style="border-top: 0"> Subject </th>
              <th style="border-top: 0"> Options </th>
            </tr>
          </thead>
          <tbody>

            <% if(teacher.length !== 0){ %>
              <% for(var i in teacher){ %>
                <tr style="text-align:center">
                  <td style="border-top: 0"><%= teacher[i].firstName %></td>
                  <td style="border-top: 0"><%= teacher[i].lastName %></td>
                  <td style="border-top: 0"><%= teacher[i].email %></td>

                  <% if(teacher[i].subjectId !== null && teacher[i].subjectId !== 0){ %>
                      <td style="border-top: 0"><%= teacher[i].Subject.name%></td>
                  <% } else { %>
                    <td style="border-top: 0">unassigned</td>
                  <% } %>
                  <td style="border-top: 0">
                    <a href="/teacher/<%= teacher[i].id %>/edit">Edit</a>/
                    <a href="/teacher/<%= teacher[i].id%>/delete"
                      onclick="if (confirm('Do you want to delete this item?')){return true;}else{event.stopPropagation(); event.preventDefault();};">Delete</a>
                  </td>
                </tr>
              <% } %>
            <% } %>
          </tbody>
        </table>
      </div>
      <br>
      <button><a href="/teacher/add" style="text-decoration:none;font-size:12px;font-weight:bold">Add</a></button>
      <button style="float:right;"><a href="/" style="text-decoration:none;font-size:12px;font-weight:bold">Back</a></button>
    </body>
</html>
