<!DOCTYPE html>
<html>
<head>
<style>
table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
}

td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
    text-align: center
}
h1, p{
    text-align: center
}
</style>
<title>Teachers</title>
</head>
<body>
  <h1>Here are our beloved teachers!</h1>
  <p><a href ="/teacher/add">add teacher</a></p>
  <div class="teacher_table">
    <table>
      <thead>
        <tr>
          <th>Id</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Subject</th>
          <th>Option</th>
        </tr>
      </thead>
      <tbody>
        <% teachersData.forEach(teacher => { %>
          <tr>
            <td><%= teacher.id %></td>
            <td><%= teacher.firstName %></td>
            <td><%= teacher.lastName %></td>
            <td><%= teacher.email %></td>
            <td><%= teacher.Subject.subjectName %></td>
            <td><a href = "/teacher/edit/<%=teacher.id%>">edit</a> || <a href="/teacher/delete/<%=teacher.id%>" onclick = "return confirm('delete this teacher?')"> delete</a> </td>
          </tr>
        <% })%>
      </tbody>
    </table>
  </div>
<p><a href ="/">home</a></p>
</body>
</html>